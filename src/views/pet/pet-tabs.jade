script(id='pet', type='text/ng-template')
   md-toolbar.md-theme-light(ng-if="pet")
      h1.md-toolbar-tools
         span {{pet.name}}, the level {{pet.level.__current}} {{pet.type}} {{pet.professionName}} with {{pet.attrs[0]}} and {{pet.attrs[1]}}

   md-progress-linear.player-xp(mode="determinate",ng-value="xpPercent",ng-if="pet")

   div.auto-flex.md-whiteframe-z1.is-flex(id="pet-tabs")
      md-tabs.is-flex.auto-flex(md-selected="selectedIndex",layout="column")
         md-tab(ui-sref="pet.overview",label="{{pet ? 'Pet' : 'Buy a Pet'}}")
            div.tab(ui-view="petoverview")

         md-tab(ui-sref="pet.equipment",label="Equipment",ng-if="pet")
            div.tab(ui-view="petequipment")

         md-tab(ui-sref="pet.inventory",label="Inventory ({{pet.inventory.length}}/{{pet._configCache.scale.inventory[pet.scaleLevel.inventory]}})",ng-if="pet")
            div.tab(ui-view="petinventory")